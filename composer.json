{
    "name": "bit6/bit6-token-generator-php",
    "description": "Token generator for Bit6 external authentication",
    "license": "Apache License",
    "minimum-stability": "dev",
    "authors": [
      {
        "name": "Alexey G"
      }
    ],
    "autoload": {
        "psr-0": {
            "Bit6": "src/"
        }
    },
    "require": {
        "firebase/php-jwt": "^3.0",
        "vlucas/phpdotenv": "^2.2",
        "phpunit/phpunit": "^5.4"
    },
    "require-dev": {
          "squizlabs/php_codesniffer": "2.*"
    },
    "scripts": {
        "sniff" : "vendor/bin/phpcs --standard=PSR2 --extensions=php src tests",
        "fix": "vendor/bin/phpcbf --standard=PSR2 --extensions=php src tests"
    }
}
